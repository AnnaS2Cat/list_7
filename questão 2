/*Crie um vetor vetde 5 posições.
Leia 5 números e guarde-os em vet.
Exiba todos os números de vet.
Leia um outro número I.
Remova o valor de vetnenhum índice I.
Mantenha o vetor sem buracos!
As posições vazias devem ser preenchidas com 0.
Exemplo:
| 90 | 55 | 15 | 70 | 10 |
Após remover I=2:
| 90 | 55 | 70 | 10 |  0 |*/


#include <stdio.h>
int main(void) {
    int vet[5];
    int i, I;
    for (i = 0; i < 5; i++) {
        printf("Digite o valor da posição %d: ", i);
        scanf("%d", &vet[i]);
    }
    printf("o vetor é:\n");
    for (i = 0; i < 5; i++) {
        printf("| %d", vet[i]);
    }
    
    printf("\nDigite o índice que deseja remover (0 a 4): ");
    scanf("%d", &I);
    for (i = I; i < 4; i++) {
        vet[i] = vet[i + 1]; //deslocando ao substituir um valor por outro
    }
    vet[4] = 0;// igual no char vet[4]='/0';, substitui o espaço que sobrou por 0
    
    printf("Vetor após remover %d:\n", I);
    for (i = 0; i < 5; i++) {
        printf("| %d ", vet[i]);
    }


#include <stdio.h>
#define c 5
void ler(int* vet){
    for(int i=0;i<c;i++){
        printf("qual o valor de v[%d]:",i);
        scanf("%d",&vet[i]);
    }
 }
void remover(int I, int* vet){
    for(int i=I;i<c;i++){
        if(i==4){
            vet[i]=0;
        }
        else {vet[i]=vet[i+1]; 
        }
    }
}
int main(void){
    int vet[c];
    int I;
    ler(vet);
    for(int i=0;i<c;i++){
        printf("| %d ",vet[i]);
    }
    printf("|");
    
    printf("qual item deseja remover? de (0 a 4)\n ");
    scanf("%d",&I);
    remover(I, vet);
    
    for(int i=0;i<c;i++){
        printf("| %d ",vet[i]);
    }
    printf("|");
}
}

/*Crie uma função media que recebe um array bidimensional arr, a quantidade de linhas l, a quantidade de colunas c, e retorna a média entre todos os valores do array:
float media (int arr[L][C], int l, int c);
L e C devem ser quaisquer valores constantes predefinidos.*/

#include <stdio.h>
#define C 100
#define L 100
float media (int arr[L][C], int l, int c){
    int x;
    float m;
    int soma=0;
    int cont=0;
    for(int i=0;i<l;i++){
       for(int j=0;j<c;j++){
           printf("qual o valor de arr[%d][%d]",i,j);
           scanf("%d",&x);
           arr[i][j]=x;
           soma+=arr[i][j]; 
           cont+=1;
        }
    }
    printf("soma %d\n",soma);
    printf("cont %d\n",cont);
    m=soma/cont;
    return m;
}
int main(void){
    int tapa[L][C];
    int l,c;
    printf("quantas linhas ?");
    scanf("%d",&l);
    printf("quantas colunas ?");
    scanf("%d",&c);
    printf("a media é: %f",media(tapa,l,c));
}
